{
  "name": "@flayyer/variables",
  "version": "0.1.1",
  "description": "Helper module to create a `schema` that enables Flayyer to display template's variables on https://flayyer.com for decks and templates.",
  "keywords": [
    "flayyer"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "typings": "dist/index.d.ts",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "author": "Patricio LÃ³pez Juri <patricio@flayyer.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/flayyer/flayyer-variables.git"
  },
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "rollup -c rollup.config.ts",
    "start": "rollup -c rollup.config.ts -w",
    "lint": "eslint '*/**/*.{js,ts,tsx}'",
    "test": "jest"
  },
  "dependencies": {
    "@sinclair/typebox": "^0.16.5"
  },
  "peerDependencies": {},
  "devDependencies": {
    "@flayyer/eslint-config": "^1.0.6",
    "@flayyer/flayyer-types": "^1.9.0",
    "@types/jest": "^26.0.22",
    "esbuild": "^0.11.14",
    "eslint": "^7.25.0",
    "husky": "^4.3.7",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.45.2",
    "rollup-plugin-dts": "^3.0.1",
    "rollup-plugin-esbuild": "^4.1.0",
    "ts-jest": "^26.5.5",
    "typescript": "^4.2.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "jest": {
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "testEnvironment": "node",
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.(ts|tsx|js)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/test/"
    ]
  }
}
